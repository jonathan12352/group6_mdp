<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfigureFragment">

    <TextView
        android:id="@+id/configureTitle"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Configurations"
        android:textSize="36dp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@id/configureTitle"
        android:layout_alignParentLeft="true"
        android:id="@+id/f1TitleTextView"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="F1: "
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_below="@id/configureTitle"
        android:layout_toRightOf="@+id/f1TitleTextView"
        android:id="@+id/f1ValueEditText"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:ems="10"
        android:gravity="left"
        android:hint="Enter F1 value"
        android:inputType="textShortMessage|textPersonName"
        android:textSize="20dp" />

    <TextView
        android:layout_below="@id/f1TitleTextView"
        android:layout_alignParentLeft="true"
        android:id="@+id/f2TitleTextView"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="F2: "
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_below="@id/f1ValueEditText"
        android:layout_toRightOf="@id/f2TitleTextView"
        android:id="@+id/f2ValueEditText"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:ems="10"
        android:gravity="left"
        android:hint="Enter F2 value"
        android:inputType="textShortMessage|textPersonName"
        android:textSize="20dp" />

    <Button
        android:layout_alignParentLeft="true"
        android:layout_below="@id/f2ValueEditText"
        android:id="@+id/saveBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textSize="24dp" />

    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@id/f2ValueEditText"
        android:id="@+id/cancelBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textSize="24dp" />

</RelativeLayout>